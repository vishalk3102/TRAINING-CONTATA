@model TaxManagementNew.Models.ChangeRequest

@{
    ViewData["Title"] = "Tax Declaration Change Request Form";
}

<section class="w-full h-full">
    <div class="max-w-[1200px] mx-auto">
        <div class="text-[1.8rem] font-medium text-center p-2 my-5">
            <h1>Tax Declaration Change Request Form</h1>
        </div>
        <div>
            <form asp-action="ChangeRequest" method="post" class="w-[40%] flex flex-col justify-evenly items-center gap-5 bg-blue-200 mx-auto my-5 py-10 rounded-[10px]">
                <div class="w-[60%]">
                    <label for="TaxId" class="leading-7 text-sm">Tax Declaration Id</label>
                    <input type="number" id="TaxId" name="TaxId" class="w-full h-[40px] text-[14px] bg-blue-50 outline-none py-1 px-3 mt-1" value="@Model.TaxId" required />
                    <span asp-validation-for="TaxId" class="text-danger"></span>
                </div>
                <div class="w-[60%]">
                    <label for="Reason" class="leading-7 text-sm">Reason For Change</label>
                    <textarea id="Reason" name="Reason" class="w-full h-[100px] text-[14px] bg-blue-50 outline-none py-1 px-3 mt-1" required>@Model.Reason</textarea>
                    <span asp-validation-for="Reason" class="text-danger"></span>
                </div>
                <div class="w-[80%] flex justify-center items-center mt-4">
                    <button type="submit" class="bg-blue-500 px-6 py-3 rounded text-white">Submit Request</button>
                </div>
            </form>
        </div>
    </div>
</section>