@model List<TaxManagementNew.Models.ViewModel.TaxDeclarationViewModel>



<section class="h-full w-full">
    <div class="max-w-[1200px] mx-auto">
        <h2 class="text-[2rem] p-2 text-center font-medium">Tax Declaration Listing</h2>
       
        <form method="get">
            <div class="my-4 flex items-center justify-evenly gap-5">
                <div class="w-[30%]">
                    <label for="FinancialYear" class="mb-2 block">Financial Year:</label>
                    <select id="FinancialYear" name="FinancialYear" class="h-[40px] text-[14px] mt-1 w-full bg-blue-50 px-3 py-1 outline-none">
                        <option value="">-- Select --</option>
                        <option value="2019">2019</option>
                        <option value="2020">2020</option>
                        <option value="2021">2021</option>
                        <option value="2022">2022</option>
                        <option value="2023">2023</option>
                        <option value="2024">2024</option>
                        <option value="2025">2025</option>
                    </select>
                </div>
                <div class="w-[30%]">
                    <label for="Name" class="mb-2 block">Employee Name:</label>
                    <input type="text" id="Name" name="Name" class="h-[40px] text-[14px] mt-1 w-full bg-blue-50 px-3 py-1 outline-none" />
                </div>
                <div class="w-[30%]">
                    <label for="EmpId" class="mb-2 block">Employee ID:</label>
                    <input type="number" id="EmpId" name="EmpId" class="h-[40px] text-[14px] mt-1 w-full bg-blue-50 px-3 py-1 outline-none" />
                </div>
            </div>
            <div class='flex items-center justify-center'>
                <button type="submit" class='text-[14px] m-1 rounded bg-blue-400 px-4 py-2 font-medium outline-none'>Filter</button>
            </div>
        </form>
        <table class="border-2 mx-auto my-5 w-full table-auto border-collapse rounded border-solid border-black">
            <thead>
                <tr class="border-2 w-full border-solid border-black">
                    <th class="text-[1.1rem] border border-slate-900 bg-blue-100 py-3 text-center font-bold uppercase">Employee ID</th>
                    <th class="text-[1.1rem] border border-slate-900 bg-blue-100 py-3 text-center font-bold uppercase">Employee Name</th>
                    <th class="text-[1.1rem] border border-slate-900 bg-blue-100 py-3 text-center font-bold uppercase">Date of Submission</th>
                    <th class="text-[1.1rem] border border-slate-900 bg-blue-100 py-3 text-center font-bold uppercase">Status</th>
                    <th class="text-[1.1rem] border border-slate-900 bg-blue-100 py-3 text-center font-bold uppercase">Unfreeze Reason</th>
                    <th class="text-[1.1rem] border border-slate-900 bg-blue-100 py-3 text-center font-bold uppercase">View Declaration</th>
                    <th class="text-[1.1rem] border border-slate-900 bg-blue-100 py-3 text-center font-bold uppercase">Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr class="border border-slate-900">
                            <td class='text-[1rem] border border-slate-900 px-2 py-1 text-center font-normal capitalize'>@item.EmpId</td>
                            <td class='text-[1rem] border border-slate-900 px-2 py-1 text-center font-normal capitalize'>@item.Name</td>
                            <td class='text-[1rem] border border-slate-900 px-2 py-1 text-center font-normal capitalize'>@item.DateOfSubmission</td>
                            <td class='text-[1rem] border border-slate-900 px-2 py-1 text-center font-normal capitalize'>@item.Status</td>
                            <td class='text-[1rem] border border-slate-900 px-2 py-1 text-center font-normal capitalize'>@item.Reason</td>
                            <td class='text-[1rem] border border-slate-900 px-2 py-1 font-normal capitalize'>
                                <form asp-controller="Admin" asp-action="ViewTaxForm" method="post" className='flex justify-center'>
                                    <input type="hidden" name="TaxId" value="@item.TaxId" />
                                    <button type="submit" class="btn btn-link flex justify-center p-0">
                                        <svg class="mx-auto h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                        </svg>
                                    </button>
                                </form>
                            </td>
                            <td class='text-[1rem] gap-5 border border-slate-900 p-1 px-4 text-center font-normal capitalize'>
                                @if (item.isSubmitted == true)
                                {

                                    @if (!string.IsNullOrEmpty(item.Reason))
                                    {
                                        <form asp-controller="Admin" asp-action="UnfreezeForm" method="post" style="display: inline;">
                                            <input type="hidden" name="TaxId" value="@item.TaxId" />
                                            <button type="submit"
                                                    class='text-[14px] m-1 rounded bg-blue-400 px-4 py-2 font-medium outline-none'>
                                                Unfreeze
                                            </button>
                                        </form>
                                        <form asp-controller="Admin" asp-action="AcceptForm" method="post" style="display: inline;">
                                            <input type="hidden" name="TaxId" value="@item.TaxId" />
                                            <button type="submit"
                                                    class='text-[14px] m-1 rounded bg-green-400 px-4 py-2 font-medium outline-none'>
                                                Accept
                                            </button>
                                        </form>
                                        <form asp-controller="Admin" asp-action="RejectForm" method="post" style="display: inline;">
                                            <input type="hidden" name="TaxId" value="@item.TaxId" />
                                            <button type="submit" class='text-[14px] m-1 rounded bg-red-400 px-4 py-2 font-medium outline-none'>Reject</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-controller="Admin" asp-action="AcceptForm" method="post" style="display: inline;">
                                            <input type="hidden" name="TaxId" value="@item.TaxId" />
                                            <button type="submit" class='text-[14px] m-1 rounded bg-green-400 px-4 py-2 font-medium outline-none'>
                                                Accept
                                            </button>
                                        </form>
                                        <form asp-controller="Admin" asp-action="RejectForm" method="post" style="display: inline;">
                                            <input type="hidden" name="TaxId" value="@item.TaxId" />
                                            <button type="submit" class='text-[14px] m-1 rounded bg-red-400 px-4 py-2 font-medium outline-none'>
                                                Reject
                                            </button>
                                        </form>
                                    }
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">No data available</td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- Placeholder for Pagination Component -->
        <div class="pagination-controls">
            <button onclick="previousPage()">Previous</button>
            <span>Page 1 of X</span>
            <button onclick="nextPage()">Next</button>
        </div>
    </div>
</section>

